        android:layout_marginTop="20dip"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnCalcular"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Calcular"
            />
    </TableRow>
</TableLayout>
