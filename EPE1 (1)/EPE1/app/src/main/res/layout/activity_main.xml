            android:layout_marginRight="20dip"
            android:inputType="numberDecimal"
            />
    </TableRow>

    <TableRow
        android:layout_marginTop="5dip"
        >

        <TextView
            android:id="@+id/tvEVA2"
            android:layout_height="wrap_content"
            android:layout_weight="1"
