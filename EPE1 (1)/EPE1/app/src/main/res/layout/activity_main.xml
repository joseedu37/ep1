            android:layout_marginRight="20dip"
            android:inputType="numberDecimal"
            />
    </TableRow>

    <TableRow
        android:layout_marginTop="5dip"
        >

        <TextView
            android:id="@+id/tvEVA3"
            android:layout_height="wrap_content"
